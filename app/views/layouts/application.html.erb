    <meta name="designer"         content="Jonathan Lau"/>
    <meta name="copyright"          content="Copyright Evolve &copy;2013"/>
    <%= favicon_link_tag 'favicon.png' %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to(image_tag("logo_navbar.png", :alt => "Evolve Travel", :title => "Evolve Travel"), "/")%>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Flights" %></a></li>
        <li><a href="/deals">Cheap Deals</a></li>
        <li><a href="/how-it-works">How it works</a></li>
        <li><a href="/faq">FAQ</a></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
      <% if user_signed_in? %>
            <li><%= link_to current_user.email, edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_registration_path %></li>
            <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
        </ul>
    </div>
  </div>  
  <div id="wrap"> 
    <%= yield %> 
  </div>
  <div id="push"></div>
	<div class="container">
        <div class="row">
        <div class="col-lg-12">
        <% [:notice, :error, :alert].each do |level| %>
          <% unless flash[level].blank? %>
            <div class="alert <%= flash_class(level) %>">
              <a class="close" data-dismiss="alert">Ã—</a>
              <%= content_tag :p, flash[level] %>
            </div>
          <% end %>
        <% end %>
        </div>
    </div>
	</div>

  <div class="navbar-fixed-bottom navbar footer" id="footer">
    <footer class="container">
      <ul class ="footer-ul nav span12">
      <li>&copy; 2013 Company, Inc.</li>
      <li><a href="#">Privacy</a></li>
      <li><a href="#">Terms</a></li>
      </ul>
    </footer>
  </div>
</body>
</html>
