<div class="container container-navbar-fix">
	<div class="row">
		<h1 class="col-xs-8">Search Results</h1>
		<h5 class="col-xs-4">Manila to Cebu | Saturday, December 28, 2013 | 1 Adult <a href="#">(Change)</a></h5>
	</div>
	<div class="progress">
	  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
	    <span class="sr-only">60% Complete (warning)</span>
	  </div>
	</div>
	<!-- <div style="width: 100%; height: 5px; background: #F87431; overflow: hidden;"></div> -->

	<div class="row">
		<div class="btn-group col-xs-12">
		  <button type="button" class="btn btn-default col-xs-3" id="temp1">Direct/Transfer</button>
		  <button type="button" class="btn btn-default col-xs-3" id="airlines">Select Airline</button>
		  <button type="button" class="btn btn-default col-xs-3" id="temp1">Select Time</button>
		  <button type="button" class="btn btn-default col-xs-3" id="temp1">Change Date</button>
		</div>
	</div>
	<div class="row">
		<div class="hidden" id="airline-panel">
		  <span class="col-xs-3">
			<input type="checkbox"> Philippine Airlines</input>
		  </span>
		  <span class="col-xs-3">
			<input type="checkbox"> Air Asia</input>
		  </span>
  		  <span class="col-xs-3">
			<input type="checkbox"> Cebu Pacific Air</input>
		  </span>
  		  <span class="col-xs-3">
			<input type="checkbox"> AirPhil</input>
		  </span>
		</div>
	</div>
	<table class="table table-striped table-bordered datatable">
		<thead>
		  <tr>
		    <th>Airline</th>
		    <th>Departure</th>
		    <th>Arrival</th>
		    <th>Price ($)</th>
		    <th>Duration</th>
		    <th></th>
		  </tr>
		</thead>
		<tbody>
			<% @flight_searches.each do |f| %>
			  <tr>
			    <td><%= f.airline %></td>
			    <td><%= f.departure_time %></td>
			    <td><%= f.arrival_time %></td>
			    <td><%= f.price %></td>
			    <td><%= f.duration %></td>
			    <td><button href="/flight_searches" class="btn btn-danger" id="buy" role="button">BUY</button></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
</div>
<script>
    $(document).ready(function() {
		$('.datatable').dataTable({
		  "sPaginationType": "bootstrap",
		  "bFilter": false,
		  "bInfo": false,
		  "bLengthChange": false,
		  "bSortClasses": false 
		});
		$('#airlines').on('click', function() {
			$('#airline-panel').toggleClass('hidden')
		});	
    });
</script>