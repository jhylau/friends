<% title "Flight Search" %>
<% description "Flight Search for Evolve Travel, Cheap Flights and Hotels" %>
<% keywords "flight search, travel, Philippines, flights, hotels, deals, cheap" %>
<% set_meta_tags :og => {
  :title    => "Flight Search",
  :type     => 'product',
  :url      => request.url,
  :image    => image_path('og_logo.png')
  }
%>
    <div class="carousel">
      <!-- Indicators -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag("landing_image.jpg", class: "landing-image", :alt => "Travel Background", :title => "Travel Background") %>
          <div class="container">
            <%= form_for @flight_search, url: flights_path do |f| %>
            <div class="row" id="flight_search">
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>1 - Flight Destinations</h3>
                    <div class="control-group flight-dates">
                      <%= f.label :departure, "Departure", class: "control-label" %>
                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon glyphicon-transfer input-group-addon"></span>
                          <%= f.text_field :departure, value: nil, class: "form-control" %>
                          <span class="input-group-btn">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">&nbsp;<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                              <li><a class="departure">Manila</a></li>
                              <li><a class="departure">Cebu</a></li>
                              <li class="divider"></li>
                              <li><a class="departure">XYZ</a></li>
                            </ul>
                          </span>
                        </div>
                      </div> 
                    </div>

                    <div class="control-group flight-dates">
                      <%= f.label :arrival, "Arrival", class: "control-label" %>
                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon glyphicon-transfer input-group-addon"></span>
                          <%= f.text_field :arrival, value: nil, class: "form-control" %>
                          <div class="input-group-btn">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">&nbsp;<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                              <li><a class="arrival">Manila</a></li>
                              <li><a class="arrival">Cebu</a></li>
                              <li class="divider"></li>
                              <li><a class="arrival">XYZ</a></li>
                            </ul>
                          </div>
                        </div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <% fmt = "%m/%d/%Y" %>
                    <% today = Date.today %>
                    <h3>2 - Flight Dates</h3>
                    <div class="control-group flight-dates">
                      <%= f.label :flight_start, "Date of Departure", class: "control-label" %>

                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                          <%= f.text_field :flight_start, value: nil, class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group flight-dates flight-search-thumbnail">
                      <%= f.label :flight_end, "Date of Return", class: "control-label" %>
                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                          <%= f.text_field :flight_end, value: nil, class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>3 - Passengers 
                      <span class="glyphicon glyphicon-user"></span>
                    </h3>
                    <div class="control-group passenger-controls">
                      <%= f.label :adults, "Adults", class: "control-label" %>
                      <p>12+</p>
                      <div class="controls">
                        <div class="input-group">
                          <%= f.select :adults, 0..7, {:selected => 1}, {class: "styled-select" } %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group passenger-controls">
                      <%= f.label :children, "Children", class: "control-label" %>
                      <p>2-12</p>
                      <div class="controls">
                        <div class="input-group">
                          <%= f.select :children, 0..7, {:selected => nil}, {class: "styled-select" } %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group passenger-controls">
                      <%= f.label :infants, "Infants", class: "control-label" %>
                      <p>0-2</p>
                      <div class="controls">
                        <div class="input-group">
                          <%= f.select :infants, (0..4), {:selected => nil}, {class: "styled-select" } %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group">
                      <button href="/flights" class="btn btn-primary" id="search" role="button"><span class="glyphicon glyphicon-search"></span> SEARCH</button>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- end row-->
            <% end %>
            <div class="row">
              <div class="col-xs-12">
                <div class="text-center landing-signup">
                  <h3>Evolve Travel</h3>
                  <h4>Sign up now for cheap airfares and hotel deals.</h4>
                  <div class="input-group col-xs-4 col-xs-offset-4">
                    <input type="text" class="form-control" placeholder="john@example.com">
                    <span class="input-group-addon signup-addon">GO</span>
                </div>
              </div>
            </div>  
          </div>
        </div>
    </div>
  </div><!-- /.carousel -->
