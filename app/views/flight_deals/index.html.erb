<div class="container container-navbar-fix">
	<div class="row">
		<h1 class="col-xs-12 text-center">Flight Deals</h1>
	</div>
	<div class="progress">
	  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
	  </div>
	</div>

	<table class="table table-striped table-bordered deals-datatable">
		<thead>
		  <tr>
		    <th>Philippine Airline</th>
		    <th>Cebu Pacific</th>
		    <th>Tiger Air</th>
		    <th>Air Asia</th>
		  </tr>
		</thead>
		<tbody>
			<%# @deals.each do |f| %>
			  <tr>
			    <td><%#= f.pa %></td>
			    <td><%#= f.cp %></td>
			    <td><%#= f.ta %></td>
			    <td><%#= f.aa %></td>
			  </tr>
			<%# end %>
		</tbody>
	</table>
</div>
<script>
    $(document).ready(function() {
		$('.deals-datatable').dataTable({
		  "sPaginationType": "bootstrap",
		  "bFilter": false,
		  "bInfo": false,
		  "bLengthChange": false,
		  "bSortClasses": false 
		});
    });
</script>