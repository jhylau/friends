    <div class="carousel">
      <!-- Indicators -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag("landing_image.jpg", class: "landing-image img-responsive") %>
          <div class="container">
            <%= form_for @flight_search do |f| %>
            <div class="row" id="flight_search">
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>Flight Destinations</h3>
                    <div class="control-group flight-dates">
                      <%= f.label :departure, "Departure", class: "control-label" %>
                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon glyphicon-transfer input-group-addon"></span>
                          <%= f.text_field :departure, value: nil, class: "form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group flight-dates">
                      <%= f.label :arrival, "Arrival", class: "control-label" %>
                      <div class="controls">
                        <div class="input-group">
                          <span class="glyphicon glyphicon glyphicon-transfer input-group-addon"></span>
                          <%= f.text_field :departure, value: nil, class: "form-control" %>
                        </div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>Flight Dates</h3>
                    <div class="control-group flight-dates">
                      <%= f.label :flight_start, "Date of Departure", class: "control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                          <%= f.text_field :flight_start, value: nil, class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group flight-dates flight-search-thumbnail">
                      <%= f.label :flight_end, "Date of Return", class: "control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                          <%= f.text_field :flight_end, value: nil, class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>Passengers</h3>
                    <div class="control-group flight-dates col-xs-4">
                      <%= f.label :adults, "Adult", class: "control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <%= f.select :adults, [0..3], class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group flight-dates col-xs-4">
                      <%= f.label :children, "Children", class: "control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <%= f.select :children, [0..3], class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group flight-dates col-xs-4">
                      <%= f.label :infants, "Infants", class: "control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <%= f.select :infants, [0..3], class: "flight-date form-control" %>
                        </div>
                      </div> 
                    </div>
                    <div class="control-group col-xs-4">
                      <button href="#" class="btn btn-primary" id="search" role="button">Search!</button>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- end row-->
            <% end %>
            <div class="row">
              <div class="col-xs-4">
                <div class="thumbnail">
                  <div class="caption">
                    <h3>Passengers</h3>
                    <p>...</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                  </div>
                </div>
              </div>
            </div>  
          </div>
        </div>
    </div>
  </div><!-- /.carousel -->
