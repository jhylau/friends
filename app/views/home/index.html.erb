    <div class="carousel">
      <!-- Indicators -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag("landing_image.jpg", :class => "landing-image img-responsive") %>
          <div class="container">
            <%= form_for @flight_search do |f| %>
            <div class="row">
              <div class="col-sm-6 col-md-4">
                <div class="thumbnail flight-search-thumbnail">
                  <div class="caption">
                    <h3>Flight Destinations</h3>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                  <div class="caption">
                    <h3>Flight Dates</h3>
                    <div class="control-group flight-dates">
                      <%= f.label :flight_start, "Date of Departure", :class=>"control-label" %>
                      <% fmt = "%m/%d/%Y" %>
                      <div class="controls">
                      <% today = Date.today %>
                        <div class="input-group">
                          <span class="glyphicon glyphicon-calendar"></span>
                          <%= f.text_field :flight_start, :value => nil, :class => "input-small flight-date" %>
                        </div>
                      </div> 

                      <div class="control-group">
                        <%= f.label :flight_end, "Date of Arrival", :class=>"control-label" %>
                        <div class="controls">
                          <%= f.text_field :flight_end, :value => nil, :class => "input-small flight-date" %>
                        </div> 
                      </div>  
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                  <div class="caption">
                    <h3>Passengers</h3>
                    <p>...</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                  </div>
                </div>
              </div>
            </div><!-- end row-->
            <% end %>
          </div>
        </div>
    </div>
  </div><!-- /.carousel -->
 <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

      <!-- Three columns of text below the carousel -->
